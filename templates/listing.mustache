{{!
    @template mod_expertforum/listing

    Displays the list of posts (questions)

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "posts": [ {"subject":"Hello",
            "excerpt": "This is my very important question",
            "votes":2,
            "answers":1,
            "views":4,
            "viewurl":"http://moodle.org",
            "timestamp":"asked 15h ago",
            "userpicture": "",
            "username": "User X",
            "userreputation": 15} ]
    }
}}
<div class="mod-expertforum-questionlist">
{{#posts}}
    <div class="question-summary">
        <div class="statscontainer">
            <div class="statsarrow"></div>
            <div class="stats">
                <div class="vote">
                    <div class="votes">
                        {{#str}}votescount,mod_expertforum,{{votes}}{{/str}}
                    </div>
                    <div class="status {{^answers}}unanswered{{/answers}}{{#answers}}answered{{/answers}}">
                        {{#str}}answerscount,mod_expertforum,{{answers}}{{/str}}
                    </div>
                </div>
                <div class="status"></div>
            </div>
            <!--div class="views">{{#str}}viewscount,mod_expertforum,{{views}}{{/str}}</div--> <!--TODO-->
        </div>
        <div class="summary">
            <h3><a class="question-hyperlink" href="{{viewurl}}">{{subject}}</a></h3>
            <div class="excerpt">{{{excerpt}}}</div>
            <div class="tags">
                {{#tags}}
                    <a class="post-tag" rel="tag" title="show questions tagged '{{tagname}}'" href="{{tagurl}}">{{tagname}}</a>
                {{/tags}}
            </div>
            <div class="started fr">
                <div class="user-info">
                    <div class="user-action-time">
                        {{{timestamp}}}
                    </div>
                    <div class="user-gravatar32">
                        {{{userpicture}}}
                    </div>
                    <div class="user-details">
                        {{{username}}}
                        <br/>
                        <span class="reputation-score" title="{{#str}}reputation,mod_expertforum{{/str}}">{{userreputation}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/posts}}
</div>